<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="@dimen/padding_stop_record_button"
        android:left="@dimen/padding_stop_record_button"
        android:right="@dimen/padding_stop_record_button"
        android:top="@dimen/padding_stop_record_button">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_red_dark" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>