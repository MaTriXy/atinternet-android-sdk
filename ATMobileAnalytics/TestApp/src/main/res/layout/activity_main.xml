<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.atinternet.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/setVisitorOptOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set Visitor OptOut" />

        <Button
            android:id="@+id/setVisitorOptIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set Visitor OptIn" />

        <Button
            android:id="@+id/setVisitorExempt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set Visitor Exempt" />

        <Button
            android:id="@+id/setVisitorNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set Visitor None" />

        <Button
            android:id="@+id/sendHit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send hit" />

        <Button
            android:id="@+id/goToSecondScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to second screen" />

    </LinearLayout>
</ScrollView>
