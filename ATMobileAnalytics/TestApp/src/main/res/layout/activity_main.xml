<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.atinternet.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/firstAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="first Action" />

        <Button
            android:id="@+id/secondAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="second Action" />

        <Button
            android:id="@+id/thirdAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="third Action" />

        <Button
            android:id="@+id/fourthAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fourth Action" />

        <Button
            android:id="@+id/fifthAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fifth Action" />

        <Button
            android:id="@+id/goToSecondScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to second screen" />

    </LinearLayout>
</ScrollView>
