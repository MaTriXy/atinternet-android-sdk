<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/validSpot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="valid spot"/>

        <Button
            android:id="@+id/noDataSpot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="spot not found"/>

        <Button
            android:id="@+id/noChannelSpot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="no channel spot"/>

        <Button
            android:id="@+id/channelUndefinedSpot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="channel undefined spot"/>

    </LinearLayout>
</ScrollView>